# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build service-main`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t service-main`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system service-main && \
          adduser --system -G service-main service-main

COPY dist/apps/service/main service-main
RUN chown -R service-main:service-main .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix service-main --omit=dev -f install

CMD [ "node", "service-main" ]
